<h2>Welcome to Pizza Shop!!!</h2>

<div class="row"> <!Tablica>

  <% @products.each do |p| %>
 
    <div class="col-md-3"> <!Otstup w tablice "md-3" eto razmer>
     
         <div>
         <%= p.title %>    <!Nazwanie pizzy>
         </div>
        
         <div>
         <img src="<%= p.path_to_image%>" />  <! Foto pizzy>
         </div>
         
         <div>
         <%= p.description%>  <!Opisanie>
         </div>
         
         <div>
         Size: <%= p.size%>cm
         </div>

         <div>
         Price: <%= p.prise%>$
         </div>
        
         <div>                                        <!JS >
         <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id%>)"> Add to cart </button>
         </div>
    </div>
  <% end %>

</div>

