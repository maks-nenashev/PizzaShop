<h2>Your Cart:</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price$</th>
    <th>Qty</th>
  </tr>
  </thead>
         <% total_qty = 0 %> <! Sozdanie peremennyh dla podscheta obchego kol-va>
         <% total_prise = 0 %>

        <% @items.each do |item| %>
  <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].prise %> $</td>
        <td><%= item[1] %></td> <!id  kol-vo>
  </tr>
        <% total_qty += item[1].to_i %>    <!Obchee kol-vo zakazow w karzine "podschet">
        <% total_prise += item[0].prise * item[1].to_i %> <!Obchee kol-vo "Price">
        <%end%>
  
  <tr style="background: wathe;"> <!color>
        <td></td>
        <td>Total: <%= total_prise %> $</td>  <!Wywod summy >
        <td><%= total_qty %></td>             <!Obchee Col=vo>
  </tr>
  </tbody>
  </table>

    <form action= "/place_order" method= "POST"> 

    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>"/>
    
    <div class="from-group">   
      <label>Name</label>                            
      <input name="order[name]" type="text" class="form-control" placeholder="Your name"/>
    </div>
    
    <br>
    <div class="from-group">
      <label>Phone</label>                             
      <input name="order[phone]" type="text" class="form-control" placeholder="Your phone"/>
    </div> 
     </br>
      
    <div class="from-group">
      <label>Delivery Address</label>                     
      <input name="order[delivery]" type="text" class="form-control" placeholder="Delivery address"/>
     </div>
     <br>

   <button type="submit" class="btn btn-primary">Place this order!</button>
   </form>